<Page
    x:Class="Park_and_Garden.View.Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Park_and_Garden.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#25282A">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="493*"/>
            <RowDefinition Height="354*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="680"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="0">
            <TextBox Text="Search" FontSize="50" Foreground="#464646" Height="80" Width="500" VerticalContentAlignment="Center" HorizontalAlignment="Left" BorderBrush="DimGray" Background="#D3D4D4" />
            <Button Height="80" Width="100" Background="#D3D4D4" FontFamily="Segoe MDL2 Assets" Content="&#xE71E;" FontSize="50" Foreground="#464646" BorderBrush="DimGray"/>
        </StackPanel>
    </Grid>
</Page>
